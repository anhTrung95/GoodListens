<nav>
  <div class="nav-wrapper">
    <a href="/" class="brand-logo"><%= fa_icon "music" %> / GoodListens</a>
    <ul id="nav-mobile" class="right hide-on-med-and-down">
      <% if user_signed_in? && current_user.admin? %>
        <li><%= link_to "Dashboard", rails_admin_path %></li>
      <% end %>
      <li><%= link_to "Songs", songs_path, :id => is_active?("songs") %></li>
      <li><%= link_to "Categories", categories_path, :id => is_active?("categories") %></li>
      <% if user_signed_in? %>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" %>
            <% if current_user.avatar? %>
              <%= image_tag current_user.avatar.url,
                size: "35x35", class: "img_user" %><b class="caret"></b>
            <% else %>
              <% if current_user.gender == "male" %>
                <%= image_tag current_user.avatar.default_url("ava-default-male.jpg"),
                  size: "35x35", class: "img_user" %><b class="caret"></b>
              <% else %>
                <%= image_tag current_user.avatar.default_url("ava-default-female.png"),
                  size: "35x35", class: "img_user" %><b class="caret"></b>
              <% end %>
            <% end %>
          </a>
          <ul class="dropdown-menu">
            <li><%= link_to "Profile", current_user, :class => "dropdown-menu-item-link" %></li>
            <li class="dropdown-menu-item"><%= link_to "Settings",
              edit_user_registration_path, :class => "dropdown-menu-item-link" %></li>
            <li class="dropdown-menu-item"><%= link_to "Log out",
              destroy_user_session_path, method: "delete", :class => "dropdown-menu-item-link" %></li>
          </ul>
        </li>
      <% else %>
        <% if current_page?(root_path) %>
          <li>
            <%= link_to "About", "#about-path",
              class: "internal_link" %>
          </li>
          <li>
            <%= link_to "Portfolio", "#portfolio-path",
              class: "internal_link" %>
          </li>
        <% end %>
        <li><%= link_to "Sign In", new_user_session_path,
          id: is_active?("devise/sessions") %></li>
      <% end %>
    </ul>
  </div>
</nav>
