<div class="main-content">
  <div class="container-fluid">
      <ul class="nav nav-pills">
        <li class="active" role="presentation">
           <%= link_to "Reviews", "#reviews_content", {"data-toggle" => "tab"} %>
        </li>
        <li role="presentation">
          <% if signed_in? %>
            <%= link_to "Following", "#following_reviews_content", {"data-toggle" => "tab"} %>
          <% else %>
            <%= link_to "Following", new_user_session_url %>
          <% end %>
        </li>
      </ul>
  </div>
  <div class="reviews-container">
    <div class="tab-content">
      <div id="reviews_content" class="tab-pane active">
        <%= render "static_pages/review_content", title: "Lasted review", reviews: Review.all.order(updated_at: :desc).first(8) %>
      </div>
      <div id="following_reviews_content" class="tab-pane">
        <%= render "static_pages/review_content", title: "Lasted review",reviews: @following_reviews %>
      </div>
  </div>
</div>
