<div class="wrapper">
  <div class="review">
    <div class="brand">
      <div class="info">
        <div class="author">
          <%= @review.song.title %>
        </div>
        <div class="song-name">
          <i><%= @review.song.singer.name %></i>
        </div>
      </div>
      <div class="song-cover-pic">
        <%= image_tag("default-song.jpg" , :size => "280x280") %>
      </div>
      <div class="song-rate">
        <div class="value">
          <%= @review.rate_score %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-2 left-block">
        <div class="contributor">
          by <strong><%= @review.user.name %></strong>
        </div>
        <div class="timestamp">
          <%= time_ago_in_words @review.updated_at %>
        </div>
        <% if current_user.is_owner_of? @review %>
          <%= link_to edit_song_review_path(song_id:
            @review.song.id, id: @review.id), class: "link" do %>
              <%= fa_icon "pencil" %>
          <% end %>
          <%= link_to song_review_path(song_id: @review.song.id,
            id: @review.id), class: "link", method: :delete do %>
              <%= fa_icon "trash" %>
          <% end %>
        <% end %>
      </div>
      <div class="col-xs-9 col-xs-push-1 right-block">
        <div class="song-des">
          <%= @review.title %>
        </div>
        <div class="music-player">
        </div>
        <div class="review-content">
          <%= @review.content.html_safe %>
        </div>
      </div>
    </div>
    <div class="row">
      <% if @like %>
        <%= render "likes/unlike" %>
      <% else %>
        <%= render "likes/like" %>
      <% end %>
    </div>
    <div class="row">
      <%= form_for(@comment, remote: true, url: song_review_comments_path(review_id: @review.id)) do |f| %>
        <%= f.text_area :content, placeholder: "Message Content ...", id: 'comment_text_box' %>
        <%= f.hidden_field :song_id, id: 'song_id', value: @review.song.id %>
        <%= f.hidden_field :review_id, id: 'review_id', value: @review.id %>
        <%= f.hidden_field :user_id, id: 'user_id', value: current_user.id %>
        <%= f.submit "Submit", id: 'comment_submit_btn' %>        
      <% end %>
    </div>
    <div class="row" id="comment_list">
    <% if @comments %>
      <% @comments.each do |comment| %>
        <%= comment.content %>
      <% end %> 
    <% end %>
  </div>
  </div>
</div>
