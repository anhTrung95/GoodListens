<div class="container">
  <div class="song_index">
  <div class="song_element">
    <div id="song_cover_img">
      <%= image_tag("default-song.jpg", :size => "100x100") %>
    </div>
    <div>
      <%= link_to song do %>
        <%= @text ="<h4>#{song.title}</h4>".html_safe %>
      <% end %>
      <% text = '' %>
      <% if song.singers  %>
          <% song.singers.each do |singer| %>
              <% text = text + singer.name %>
              <% if !singer.equal? song.singers.last %>
                  <% text = text + ', ' %>
              <% end %>
          <% end %>
          <%= @text = "<h5><strong>Singer: </strong>#{text}</h5>".html_safe %>
      <% end %>
      <h5><strong>Category: </strong><%= get_name_categories song.categories %></h5>
      <div>
        <h5>
          <strong><%= t "app.song.rating" %>: </strong>
          <span>
            <%= render "shared/song_avg_rate", rate_avg: song.rate_avg %>
          </span>
        </h5>
      </div>
    </div>
  </div>
</div>

</div>