<div>
  <div class="container">
    <div class="search-tool">
      <%= form_tag search_singers_path, method: :get do %>
          <div class="search-group" id="search-tool">
            <%= text_field_tag :keyword, params[:key_word],
                               class: "form-control", value: params[:keyword],
                               placeholder: t("app.shared.search") %>
            <%= button_tag type: "submit", class: "search-btn",
                           name: nil do %>
                <span class="glyphicon glyphicon-search"></span>
            <% end %>
          </div>
      <% end %>
    </div>
  <% if @singers.any? %>
      <%= render @singers %>
      <%= will_paginate @singers, inner_window: 1, outer_window: 2 %>
  <% else %>
      <%= @text ="<h2 style = 'clear: both'>Singer isn't available</h2>".html_safe %>
  <% end %>
  </div>
</div>
