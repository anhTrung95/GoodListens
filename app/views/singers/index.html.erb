<div class="row content-song">
  <div class="col-md-12">
    <div class="search-tool">
      <%= form_tag search_singers_path, method: :get do %>
      <div class="search-group" id="search-tool">
        <%= text_field_tag :keyword, params[:key_word],
        class: "form-control", value: params[:keyword],
         placeholder: t("app.shared.search") %>
         <%= button_tag type: "submit", class: "search-btn",
         name: nil do %>
         <span class="glyphicon glyphicon-search"></span>
         <% end %>
       </div>
       <% end %>
     </div>
   </div>
   <div class="col-md-9">
    <% if @singers.any? %>
    <%= render @singers %>
    <%= will_paginate @singers, inner_window: 1, outer_window: 2 %>
    <% else %>
    <%= @text ="<h2 style = 'clear: both'>Singer isn't available</h2>".html_safe %>
    <% end %>
  </div>
  <div class="col-sm-3 sidenav tab-song" style="float: right;">
    <div class="title-content" style="background: #fff">
      <h4><%= t "app.singer.singer_like" %>
        <span class="glyphicon glyphicon-menu-right"></span>
      </h4>
    </div>
    <div class="tabbable-panel" style="height: 700px;">
      <div class="tabbable-line" style="background: #36a45963;">
        <div class="tab">
          <a href="#tab_default_1" data-toggle="tab"><%= t "app.singer.viet_nam" %></a>
          <a href="#tab_default_2" data-toggle="tab"><%= t "app.singer.ua_uk" %> </a>
          <a href="#tab_default_3" data-toggle="tab"><%= t "app.singer.japan" %></a>
        </div>

        <div class="tab-content">
          <div class="tab-pane active" id="tab_default_1">
            <ul class="list-group">
              <li class="list-group-item">
                <div class="info-song">
                  <span class="rank fn-order">01</span>
                  <h3 class="song-name ellipsis">
                    <a href="#">Em Gái Mưa</a>
                  </h3>
                  <h4 class="singer-name ellipsis"><a href="/nghe-si/Huong-Tram">Hương Tràm</a></h4>

                </div>

              </li>
              <li class="list-group-item">
                <div class="info-song">
                  <span class="rank fn-order">02</span>
                  <h3 class="song-name ellipsis">
                    <a href="#">Em Gái Mưa</a>
                  </h3>
                  <h4 class="singer-name ellipsis"><a href="/nghe-si/Huong-Tram">Hương Tràm</a></h4>

                </div>
              </li>

            </ul>
          </div>
          <div class="tab-pane" id="tab_default_2">
            <ul class="list-group">
              <li class="list-group-item">
                <div class="info-song">
                  <span class="rank fn-order">02</span>
                  <h3 class="song-name ellipsis">
                    <a href="#">Em Gái Mưa</a>
                  </h3>
                  <h4 class="singer-name ellipsis"><a href="/nghe-si/Huong-Tram">Hương Tràm</a></h4>
                </div>
              </li>
            </ul>
          </div>
          <div class="tab-pane" id="tab_default_3">
            <ul class="list-group">
              <li class="list-group-item">
                <div class="info-song">
                  <span class="rank fn-order">02</span>
                  <h3 class="song-name ellipsis">
                    <a href="#">Em Gái Mưa</a>
                  </h3>
                  <h4 class="singer-name ellipsis"><a href="/nghe-si/Huong-Tram">Hương Tràm</a></h4>
                </div>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
